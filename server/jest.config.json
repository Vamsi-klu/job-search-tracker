{
  "testEnvironment": "node",
  "transform": {},
  "extensionsToTreatAsEsm": [".js"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testMatch": [
    "**/__tests__/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js",
    "!**/node_modules/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 95,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  },
  "coverageReporters": ["text", "lcov", "html"]
}
